<div class="container">
  <div class="row">
    <h1 class="text-center">Cocktails</h1>
    <%= link_to "Add new Cocktail", new_cocktail_path, class: "text-left" %>
  </div>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="cocktail" style="<% if cocktail.photo.present? %>
          background-image: linear-gradient(-225deg, rgba(0,101,168,0.2) 0%, rgba(0,36,61,0.2) 50%), url('<%= cl_image_path cocktail.photo, height: 1000, width: 1000, crop: :fill %>');
          <% else %>
            background-image: url('<%= asset_url('placeholder.jpg') %>') ;
          <% end %>">
          <h3 class="cocktail-name"><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
          <p class="cocktail-ingredients">Ingredients: <%= cocktail.doses.count %></p>
          <%= link_to "[X]", cocktail_path(cocktail), class: "cocktail-delete", method: :delete %>
        </div>

      </div>
    <% end %>
  </div>
</div>





