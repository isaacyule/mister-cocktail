<div class="container">
  <div class="cocktail-show">
    <div class="cocktail-show-info">
      <div class="cocktail-show-heading">
        <h1 class="text-left"><%= @cocktail.name.capitalize %></h1>
        <%= link_to "Add Ingredient", new_cocktail_dose_path(@cocktail)  %>
      </div>
      <% @cocktail.doses.each do |dose| %>
        <div class="cocktail-show-doses">
          <p><%= dose.description %> of <%= dose.ingredient.name %></p>
          <%= link_to "[X]", cocktail_dose_path(dose.id), method: :delete %>
        </div>
      <% end %>
      <p>
        <strong>
          Preparation time: <%= 2 * @cocktail.doses.count %> minutes
        </strong>
      </p>
    </div>
    <div class="cocktail-show-photo" style="<% if @cocktail.photo.present? %>
      background-image: linear-gradient(-225deg, rgba(0,101,168,0.2) 0%, rgba(0,36,61,0.2) 50%), url('<%= cl_image_path @cocktail.photo, height: 500, width: 500, crop: :limit %>')
    <% else %>
      background-image: url('<%= asset_url('placeholder.jpg') %>');
    <% end %> " >
    </div>
  </div>
</div>


